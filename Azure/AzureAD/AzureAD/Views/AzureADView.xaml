<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AzureAD.Views.AzureADView">
  <StackLayout VerticalOptions="Center">
    <Label x:Name="lblUserId"></Label>
    <Label x:Name="lblUserDisplayName"></Label>
    <Label x:Name="lblUserInfoJson"></Label>
    <Button x:Name="btnLogin" Text="登入" Clicked="btnLogin_Click"></Button>
    <Button x:Name="btnLogout" Text="登出" Clicked="btnLogout_Click" IsEnabled="false"></Button>
  </StackLayout>
</ContentPage>